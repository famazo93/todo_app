name: Build and Deploy React App to GitHub Pages

on:
  push:
    branches:
      - main  # Change this to the main branch name of your repository

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Code
        uses: actions/checkout@v2

      - name: Setup Node.js
        uses: actions/setup-node@v2
        with:
          node-version: 14  # You can change this to your desired Node.js version

      - name: Install Dependencies
        working-directory: ./client  # Navigate to the /client subfolder
        run: npm install

      - name: Build Production Version
        working-directory: ./client  # Navigate to the /client subfolder
        run: npm run build

      - name: Deploy to GitHub Pages
        uses: JamesIves/github-pages-deploy-action@3.7.1
        with:
          branch: gh-pages  # The branch where the built files will be deployed
          folder: client/build  # The path to the build output of your React app

      - name: Cleanup
        run: rm -rf client/node_modules  # Remove the node_modules folder in the /client subfolder to save space
